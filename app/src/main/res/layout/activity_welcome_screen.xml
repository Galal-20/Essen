    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Text_welcome"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_margin="20dp"
        />


    <com.example.swipebutton_library.SwipeButton
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/button_reg_Welcome"
        android:text="@string/register"
        android:textAllCaps="false"
        app:button_background_padding="1dp"
        app:button_background_src="@drawable/go"
        app:button_background_tint="@color/gray"
        app:button_height="60dp"
        app:button_width="60dp"
        app:has_active_status="true"
        app:has_finish_animation="true"
        app:inner_text="@string/register"
        app:inner_text_color="@color/white"
        app:inner_text_gravity="center"
        app:inner_text_padding="8dp"
        app:inner_text_size="18sp"
        app:outer_background_drawable="@drawable/ed"
        app:outer_background_height="60dp"
        app:trail_background_tint="@color/green"
        app:trail_enabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Text_welcome"
        app:layout_constraintBottom_toTopOf="@id/login_button_welcome"
        app:layout_constraintVertical_bias="0.6"
        android:onClick="register_Screen"
        android:backgroundTint="@color/cardview_dark_background"
        />

    <com.example.swipebutton_library.SwipeButton
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/login_button_welcome"
        android:textAllCaps="false"
        app:button_background_padding="1dp"
        app:button_background_src="@drawable/go"
        app:button_background_tint="@color/gray"
        app:button_height="60dp"
        app:button_width="60dp"
        app:has_active_status="true"
        app:has_finish_animation="true"
        app:inner_text="@string/login"
        app:inner_text_color="@color/white"
        app:inner_text_gravity="center"
        app:inner_text_padding="8dp"
        app:inner_text_size="18sp"
        app:outer_background_drawable="@drawable/ed"
        app:outer_background_height="60dp"
        app:trail_background_tint="@color/green"
        app:trail_enabled="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gust_button_welcome"
        app:layout_constraintTop_toBottomOf="@id/button_reg_Welcome"
        app:layout_constraintVertical_bias="0.5"
        android:onClick="Login_screen"
        android:backgroundTint="@color/cardview_dark_background"

        />

    <com.example.swipebutton_library.SwipeButton
        android:id="@+id/gust_button_welcome"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        app:button_background_padding="1dp"
        app:button_background_src="@drawable/go"
        app:button_background_tint="@color/gray"
        app:button_height="60dp"
        app:button_width="60dp"
        app:has_active_status="true"
        app:has_finish_animation="true"
        app:inner_text="@string/guest"
        app:inner_text_color="@color/white"
        app:inner_text_gravity="center"
        app:inner_text_padding="8dp"
        app:inner_text_size="18sp"
        app:outer_background_drawable="@drawable/ed"
        app:outer_background_height="60dp"
        app:trail_background_tint="@color/green"
        app:trail_enabled="true"
        tools:ignore="MissingConstraints"
        android:onClick="Guest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button_welcome"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent=".8"

        />



</androidx.constraintlayout.widget.ConstraintLayout>