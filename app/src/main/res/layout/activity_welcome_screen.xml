<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Welcome.Welcome_Screen">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_welcome"
        android:src="@drawable/bg2"
        android:scaleType="centerCrop"
        android:foreground="@drawable/forground_shape"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Text_welcome"
        android:fontFamily="@font/beth_ellen"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_margin="20dp"
        />
    
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/button_reg_Welcome"
        android:text="@string/register"
        android:padding="19dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Text_welcome"
        app:layout_constraintBottom_toTopOf="@id/login_button_welcome"
        app:layout_constraintVertical_bias="0.6"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:onClick="register_Screen"
        android:backgroundTint="@color/cardview_dark_background"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/login_button_welcome"
        android:text="@string/login"
        android:padding="19dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gust_button_welcome"
        app:layout_constraintTop_toBottomOf="@id/button_reg_Welcome"

        app:layout_constraintVertical_bias="0.5"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:onClick="Login_screen"
        android:backgroundTint="@color/cardview_dark_background"

        />

    <Button
        android:id="@+id/gust_button_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:onClick="Guest"
        android:padding="19dp"
        android:text="@string/guest"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button_welcome"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent=".8"

        />



</androidx.constraintlayout.widget.ConstraintLayout>