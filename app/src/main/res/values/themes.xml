<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Essen" parent="Theme.Material3.Light.NoActionBar">
        <!-- Set the status bar color to white -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Ensure the status bar icons are dark to be visible on the white background -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorPrimary">@color/gray</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
    </style>

    <style name="Theme.Essen" parent="Base.Theme.Essen" />
</resources>
